{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  }
}
